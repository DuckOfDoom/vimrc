{
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,

    "[haskell]" :{
        "editor.insertSpaces": true,
        "editor.tabSize" : 2,
        "editor.autoIndent": true,
        "editor.defaultFormatter": "MaxGabriel.brittany",
    },

    "stylishHaskell.showConsoleOnError": false,
    "stylishHaskell.runOnSave": false,

    // This does not work =(
    "terminal.external.windowsExec": "C:\\Git\\bin\\sh.exe",

    "vim.useCtrlKeys": false,
    "vim.leader": ",",
    "vim.easymotion": true,

    "vim.insertModeKeyBindings": [
        {
          "before": ["j", "k"],
          "after": ["<Esc>"]
        }
      ],

    "vim.visualModeKeyBindings": [
        {
          "before": ["j", "k"],
          "after": ["<Esc>"]
        }
      ],

    "vim.normalModeKeyBindings" : [
        {
            "before": [ "J" ],
            "commands": [ "workbench.action.previousEditor" ]
        },
        {
            "before": [ "<space>" ],
            "after" : ["z", "z"]
        },
        {
            "before": [ "K" ],
            "commands": [ "workbench.action.nextEditor" ]
        },
        {
            "before": [ "<leader>", "g"],
            "commands": [ "workbench.view.scm" ]
        },
        {
            "before": [ "<leader>", "b", "c" ],
            "commands": [ "workbench.action.closeActiveEditor" ]
        },
        {
            "before": [ "<leader>", "b", "a" ],
            "commands": [ "workbench.action.closeOtherEditors" ]
        },
        {
            "before": [ "<leader>", "f", "d" ],
            "commands": [ "editor.action.goToDeclaration" ]
        },
        {
            "before": [ "<leader>", "f", "u" ],
            "commands": [ "editor.action.showReferences" ]
        },
        {
            "before": [ "<leader>", "f", "a", "u" ],
            "commands": [ "editor.action.showReferences" ]
        },
        {
            "before": [ "<leader>", "n", "t"],
            "commands": [ "workbench.files.action.showActiveFileInExplorer" ]
        },
        {
            "before": [ "<leader>", "q"],
            "commands": [ "editor.action.showHover" ]
        },
        {
            "before": [ "<leader>", "i", "t"],
            "commands": [ "haskero.insertType"],
            "when": "editorTextFocus"
        }
    ],
    "files.autoSave": "off",
    "explorer.confirmDelete": false
}