"backspace pls!
set backspace=indent,eol,start

"leaderKey
let mapleader = ","
let g:mapleader = ","

map <leader>ba :vsc File.CloseAllButThis<CR>
map <leader>bc :vsc Window.CloseDocumentWindow<CR>

"vs commands
map <leader>fr  :vsc Edit.FindAllReferences<CR>
map <leader>gb  :vsc ReSharper.ReSharper_GotoBase<CR>
map <leader>gi  :vsc ReSharper.ReSharper_GotoInheritors<CR>
map <leader>pd  :vsc Edit.PeekDefinition<CR>
map <leader>gd  :vsc Edit.GoToDefinition<CR>
map <leader>fu  :vsc ReSharper.ReSharper_GotoUsage<CR>
map <leader>fau :vsc ReSharper.ReSharper_FindUsagesAdvanced<CR>
map <leader>nt  :vsc SolutionExplorer.SyncWithActiveDocument<CR>
map <leader>cd  :vsc Edit.CollapsetoDefinitions<CR>

" align
map ga :vsc Edit.AlignByString<CR><ESC><ESC>

"refactoring
map <leader>r  :vsc ReSharper.ReSharper_Rename<CR>
map <leader>em :vsc ReSharper.ReSharper_ExtractMethod<CR>

map <A-j> :vsc ReSharper.Resharper_GotoNextHighlight<CR>
map <A-k> :vsc ReSharper.Resharper_GotoPrevHighlight<CR>

nnoremap <C-p> :vsc ReSharper.ReSharper_GotoType<CR>

map <C-n> :vsc Edit.LineDown<CR>

nnoremap <A-S-k> :vsc ReSharper.ReSharper_GotoPrevMethod<CR>
nnoremap <A-S-j> :vsc ReSharper.ReSharper_GotoNextMethod<CR>

nnoremap '' :vsc View.NavigateBackward<CR>

nnoremap <C-j> :join<CR>

"switching tabs
nnoremap <S-k> :vsc Window.NextTab<CR>
nnoremap <S-j> :vsc Window.PreviousTab<CR>

"paste multiple times
xnoremap p pgvy

nmap <space> zz