"backspace pls!
set backspace=indent,eol,start

"leaderKey
let mapleader = ","
let g:mapleader = ","

"closeWindows
map <leader>ba :vsc File.CloseAllButThis<CR>
map <leader>bc :vsc Window.CloseDocumentWindow<CR>

"go to resharper Highlights
nnoremap <A-j> :vsc ReSharper.Resharper_GotoNextHighlight<CR>
nnoremap <A-k> :vsc ReSharper.Resharper_GotoPrevHighlight<CR>

"go to type via ctrl+p
nnoremap <C-p> :vsc ReSharper.ReSharper_GotoType<CR>

"join lines is now here!
nnoremap <C-j> :join<CR>

nnoremap '' ''zz

"switching tabs
nnoremap <S-k> :vsc Window.NextTab<CR>
nnoremap <S-j> :vsc Window.PreviousTab<CR>

"paste multiple times
xnoremap p pgvy

"move screen to cursor when searching
nmap <space> zz
nmap n nzz
nmap N Nz
